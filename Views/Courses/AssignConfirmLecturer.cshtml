@model MVC.ModelView.LecturerViewModel

@{
    ViewBag.Title = "AssignConfirmLecturer";
    Layout = "~/Views/Shared/FloatingHeader.cshtml";
}
@{
    ViewBag.Title = "AssignConfirmLecturer";
}

<style>
    html {
        background-image: url('../../images/backgroundwhite.jpg');
        background-size: cover;
    }
</style>

<h2>AssignConfirm</h2>

<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Course</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Lecturer.LecId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Lecturer.LecId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Lecturer.LecId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Lecturer.LecName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Lecturer.LecName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Lecturer.LecName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Lecturer.CourseId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Lecturer.CourseId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Lecturer.CourseId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @{
                        if (ViewBag.error != null)
                        {
                            <span style="color:red">@ViewBag.error</span>
                            <br />
                        }
                        if (ViewBag.error2 != null)
                        {
                            <span style="color:red">@ViewBag.error2</span>
                            <br />
                        }
                    }

                    <input type="submit" value="Assign" class="btn btn-default" />
                </div>
            </div>
        </div>
                        }
    <div>
        @Html.ActionLink("Back to List", "AssignLecturer")
    </div>

</body>

